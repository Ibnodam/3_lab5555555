    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="93*"/>
            <ColumnDefinition Width="707*"/>
        </Grid.ColumnDefinitions>
        <TextBox HorizontalAlignment="Left" Height="47" FontSize="20" x:Name="tb_header"  Margin="59,30,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="226" Grid.Column="1"/>

