        <CheckBox Grid.Column="1" x:Name="cb_isvisible" Content="Видимое" HorizontalAlignment="Left" Margin="393,222,0,0" VerticalAlignment="Top" Height="40" Width="116"/>
        <!--<TextBlock HorizontalAlignment="Left" Height="36" FontSize="15" Margin="348,272,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="226" Grid.Column="1" Text="Состояние: с рамкой (true/false)"/>
